<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout1">
    <ImageButton
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/avatr"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar"
        android:layout_marginTop="27.0dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_marginTop="220.0dp"
        android:hint="Login"
        android:inputType="text"
        android:layout_marginLeft="40.0dp" 
        android:layout_marginRight="40.0dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_marginTop="280.0dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:layout_marginTop="340.0dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repass"
        android:layout_marginTop="400.0dp"
        android:hint="Repeat password"
        android:inputType="textPassword"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450.0dp"
        android:id="@+id/confirm"
        android:text="Регистрация"
    />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar1" 
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
    android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter"
        android:layout_centerHorizontal="true"
        android:text="Уже есть учетная запись? Войти!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="510dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb1" 
        android:layout_alignRight="@+id/pass"
        android:layout_alignTop="@+id/pass"
        android:layout_marginTop="7dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb2" 
        android:layout_alignRight="@+id/repass"
        android:layout_alignTop="@+id/repass"
        android:layout_marginTop="7dp"/>
    
</RelativeLayout>
